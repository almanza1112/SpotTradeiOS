# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'spottrade' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for spottrade
  # Firebase Pods
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Messaging'
  pod 'Firebase/Database'
  pod 'Firebase/Crash'
  pod 'Firebase/Storage'
  
  # Google Pods
  pod 'GoogleMaps'
  pod 'GooglePlaces'
  pod 'GoogleSignIn'

  # HTTP Requests Pod
  pod 'Alamofire', '~> 4.7'

  # Image caching Pod
  pod 'Kingfisher', '~> 4.0'
  
  # JSON Parsing Pod
  pod 'SwiftyJSON', '~> 4.0'
  
  # Braintree Pods
  pod 'Braintree'
  pod 'Braintree/Venmo'
  
  # Facebook Loign Pod
  pod 'FBSDKLoginKit'
  
  target 'spottradeTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'spottradeUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
